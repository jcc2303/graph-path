{
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "fix": "eslint --fix \"{,!(node_modules|public|docs|build)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public|docs|build)/**/}*.{js,svelte}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@snowpack/plugin-svelte": "^3.6.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "husky": "^5.2.0",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "snowpack": "^3.0.1",
    "svelte-preprocess": "^4.6.9",
    "tailwindcss": "^2.0.4"
  },
  "dependencies": {
    "svelte": "^3.35.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "npm run fix && npm run format"
  }
}
