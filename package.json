{
  "scripts": {
    "start": "snowpack dev",
    "build": "snowpack build",
    "test": "jest .",
    "test:watch": "npm run test -- --watch",
    "fix": "eslint --fix \"{,!(node_modules|public|docs|build)/**/}*.{js,svelte}\"",
    "format": "prettier --write \"{,!(node_modules|public|docs|build)/**/}*.{js,svelte}\"",
    "prepare": "husky install",
    "serve": "sirv build --host 0.0.0.0",
    "deploy": "gh-pages -d build -r https://github.com/jcc2303/graph-path.git -b master"
  },
  "devDependencies": {
    "@snowpack/plugin-svelte": "^3.6.0",
    "@snowpack/plugin-webpack": "^2.3.1",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/svelte": "^3.0.3",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.22.0",
    "eslint-plugin-svelte3": "^3.1.2",
    "gh-pages": "^3.1.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "sirv-cli": "^1.0.11",
    "snowpack": "^3.0.1",
    "svelte-jester": "^1.4.0",
    "svelte-preprocess": "^4.6.9",
    "tailwindcss": "^2.0.4"
  },
  "dependencies": {
    "svelte": "^3.35.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*": "npm run fix && npm run format"
  },
  "jest": {
    "transform": {
      "^.+\\.svelte$": "svelte-jester"
    },
    "moduleFileExtensions": [
      "js",
      "svelte"
    ]
  },
  "setupFilesAfterEnv": ["@testing-library/jest-dom/extend-expect"]
}
